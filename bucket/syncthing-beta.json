    },
    "32bit": {
      "url": "https://ghgo.xyz/https://github.com/syncthing/syncthing/releases/download/v1.29.6-rc.1/syncthing-windows-386-v1.29.6-rc.1.zip",
      "hash": "476a1edf1cde05f409a3dd95c84de1d5175e9690075b4e03d5c6618515b1fc74",
      "extract_dir": "syncthing-windows-386-v1.29.6-rc.1"
    },
    "arm64": {
      "url": "https://ghgo.xyz/https://github.com/syncthing/syncthing/releases/download/v1.29.6-rc.1/syncthing-windows-arm64-v1.29.6-rc.1.zip",
