      "extract_dir": "syncthing-windows-amd64-v1.29.7-rc.2"
    },
    "32bit": {
      "url": "https://ghgo.xyz/https://github.com/syncthing/syncthing/releases/download/v1.29.7-rc.2/syncthing-windows-386-v1.29.7-rc.2.zip",
      "hash": "08f0d1282bd59654ff29bd2e408abc4ab09968cba7d3330e146da42a0fc38168",
      "extract_dir": "syncthing-windows-386-v1.29.7-rc.2"
    },
    "arm64": {
      "url": "https://ghgo.xyz/https://github.com/syncthing/syncthing/releases/download/v1.29.7-rc.2/syncthing-windows-arm64-v1.29.7-rc.2.zip",
